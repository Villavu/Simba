    Filter := '|Armies(*.xml; *.raf)|*.xml; *.raf|All files (*.*)|*.*|';
    Options := Options + [ofPathMustExist, ofFileMustExist, ofHideReadOnly];
    if Execute then
    begin
      NewArmy(nil);
