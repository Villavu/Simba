{$assertions on}

var
  TreePoints: TPointArray := [
    TPoint.Create(19, 4),
    TPoint.Create(19, 16),
    TPoint.Create(7, 32),
    TPoint.Create(27, 40),
    TPoint.Create(31, 60),
    TPoint.Create(19, 72),
    TPoint.Create(59, 76),
    TPoint.Create(51, 84)
  ];

var
  img: TMufasaBitmap := TMufasaBitmap.CreateFromString(100, 100, '');
  templ: TMufasaBitmap := TMufasaBitmap.CreateFromString(10, 10, 'meJxjYCAA2A30IQxuvQA0BlwWKAIRBHLh6oFARFIeWQtECq4AKAtEQC5QFq4RWTuagWiGI9uIJgV3EsRwPF6Du5wYAAAGDQ9J');
  TPA: TPointArray;
begin
  Target.SetBitmap(img);

  // find all, entire client
  TPA := Finder.FindBitmap(templ, 0, -1);
  Assert(TPA.Length() = 8);
  Assert(TPA[0] = TreePoints[0]);
  Assert(TPA[1] = TreePoints[1]);
  Assert(TPA[2] = TreePoints[2]);
  Assert(TPA[3] = TreePoints[3]);
  Assert(TPA[4] = TreePoints[4]);
  Assert(TPA[5] = TreePoints[5]);
  Assert(TPA[6] = TreePoints[6]);
  Assert(TPA[7] = TreePoints[7]);

  // find all, area
  TPA := Finder.FindBitmap(templ, 0, -1, [24, 37, 45, 71]);
  Assert(TPA.Length() = 2);
  Assert(TPA[0] = TreePoints[3]);
  Assert(TPA[1] = TreePoints[4]);

  // find one
  TPA := Finder.FindBitmap(templ, 0, 1);
  Assert(TPA.Length() = 1);
  Assert(TPA[0] = TreePoints[0]);

  // find one, area
  TPA := Finder.FindBitmap(templ, 0, 1, [24, 37, 45, 71]);
  Assert(TPA.Length() = 1);
  Assert(TPA[0] = TreePoints[3]);

  // test tolerance
  templ.Brightness(25);
  templ.SetTransparentColor(1644825);

  // find all with tolerance, entire client
  TPA := Finder.FindBitmap(templ, 10, -1);
  Assert(TPA.Length() = 8);
  Assert(TPA[0] = TreePoints[0]);
  Assert(TPA[1] = TreePoints[1]);
  Assert(TPA[2] = TreePoints[2]);
  Assert(TPA[3] = TreePoints[3]);
  Assert(TPA[4] = TreePoints[4]);
  Assert(TPA[5] = TreePoints[5]);
  Assert(TPA[6] = TreePoints[6]);
  Assert(TPA[7] = TreePoints[7]);

  // find all with (too low) tolerance, entire client
  TPA := Finder.FindBitmap(templ, 5, -1);
  Assert(TPA.Length() = 0);

  img.Free();
  templ.Free();
end.
