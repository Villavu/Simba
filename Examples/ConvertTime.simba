program ConvertTime_Example;

var
  Hours, Minutes, Seconds: Integer;

begin
  ConvertTime(GetSystemTime, Hours, Minutes, Seconds);
  // GetSystemTime returns the amount of time your computer has been on (in milliseconds).

  Writeln('Your system has been running for ' + IntToStr(Hours) + ' hours, ' +
    IntToStr(Minutes) + ' minutes and ' + IntToStr(Seconds) + ' seconds.');
end.
